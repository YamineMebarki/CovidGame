{% extends 'base.html.twig' %}
    {% block title %}Nouveau mot de passe{% endblock %}
    {% block body %}
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5 mb-5 text-center">
                    <h1 class="title">Cr√©er un nouveau mot de passe</h1>
                    <form action="" method="post">
                        <div class="form-group mt-5 mb-5">
                            <label for="email_pass_lost">Nouveau mot de passe :</label>
                            <input type="password" class="form-control pass" name="new_pass_user" id="new_pass" required minlength="8">
                        </div>
                        <div class="form-group mt-5 mb-5">
                            <label for="email_pass_lost">Confirmer votre nouveau mot de passe :</label>
                            <input type="password" class="form-control pass" name="confirm_new_pass" id="new_pass" required minlength="8">
                        </div>
                        <div class="form-group">
                            <a class="show-pass"><i class="far fa-eye-slash eyes mt-3" id="eyesOn"></i></a>
                            <a class="show-pass"><i class="far fa-eye eyes mt-3" id="eyesOff"></i></a>
                        </div>
                        <div class="form-group text-center">
                            <a href="{{ path('new_pass', {'id':app.user.id}) }}" ><button type="submit" class="btn btn-success mt-5 mb-5" name="new_pass" value="new_pass">Confirmer</button></a>
                        </div>
                    </form>
                    <a href="{{ path('home', {'id': app.user.id}) }}"><button class="btn btn-danger">Annuler</button></a>
                </div>
            </div>
        </div>
    {% endblock %}
{% block javascripts %}
    <script>
        document.getElementById('eyesOn').style.display = 'block';
        document.getElementById('eyesOff').style.display = 'none';
        $(".show-pass").click(function (e) {
            e.preventDefault();
            var type = $(".pass").attr('type');
            switch (type) {
                case 'text':
                {
                    $(".pass").attr('type', 'password');
                    document.getElementById('eyesOff').style.display = 'none';
                    document.getElementById('eyesOn').style.display = 'block';
                    return;
                }
                case 'password':
                {
                    $(".pass").attr('type', 'text');
                    document.getElementById('eyesOn').style.display = 'none';
                    document.getElementById('eyesOff').style.display = 'block';
                    return;
                }
            }
        });
    </script>
{% endblock %}